extends ./layouts/app

block styles
  link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido 
  div(class="py-5")
    h1(class="text-center text-4xl font-extrabold") UbicaciÃ³n en el Mapa

    div(class="flex flex-col md:flex-row gap-4 items-center py-10")
      h2(class="text-sm uppercase text-gray-800 font-bold") Filtrar Propiedades:
      div(class="w-full md:w-auto flex items-center gap-2")
        label(for="categorias", class="text-sm w-24 uppercase text-gray-500 font-bold") Categorias 
        select(name="categorias", id="categorias", class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow") 
          option(value="") - Seleccione -
          each categoria in categorias 
            option(value=categoria.id)=categoria.nombre

      div(class="w-full md:w-auto flex items-center gap-2")
        label(for="precios", class="text-sm w-24 uppercase text-gray-500 font-bold") Precios 
        select(name="precios", id="precios", class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-md shadow") 
          option(value="") - Seleccione -
          each precio in precios 
            option(value=precio.id)=precio.nombre


    div(id="mapa-inicio", class="h-[600px] w-full mt-5")

    section(class="py-5")
      h2(class="text-center text-4xl font-extrabold pt-10") Casas en Venta
      div(class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 mt-14")
        if casas.length > 0
          each propiedad in casas  
            include ./templates/card-propiedad
        else
          p(class="mx-auto col-span-full text-center font-extrabold text-2xl border border-gray-300 rounded-md p-4 max-w-xl uppercase") No hay casas aun

      section(class="py-5")
      h2(class="text-center text-4xl font-extrabold pt-10") Departamentos en Venta
      div(class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 mt-14")
        if departamentos.length > 0
          each propiedad in departamentos  
            include ./templates/card-propiedad
        else
          p(class="mx-auto col-span-full text-center font-extrabold text-2xl border border-gray-300 rounded-md p-4 max-w-xl uppercase") No hay departamentos aun
block scripts 
  script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
  script(src="./js/mapaInicio.js") 

extends ./layouts/app

block contenido 
  section(class="py-5")
    h2(class="text-center text-4xl font-extrabold pt-10")=page
    div(class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 mt-14")
      if propiedades.length > 0
        each propiedad in propiedades  
          include ./templates/card-propiedad
      else
        p(class="mx-auto col-span-full text-center font-extrabold text-2xl border border-gray-300 rounded-md p-4 max-w-xl uppercase") No se encontraron propiedades en la busqueda

